<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:stretchColumns="1">
 	<TableRow android:id="@+id/idData" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center">
 		<ImageView android:layout_height="150dip" android:src="@drawable/icon" android:layout_width="150dip" android:id="@+id/IMAGE" android:padding="10dip"></ImageView>
 		<TableLayout android:id="@+id/nameFields" android:layout_width="wrap_content" android:layout_height="wrap_content">
 			<TextView android:text="First Name" android:id="@+id/fName" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 			<EditText android:text="" android:id="@+id/editFName" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
 			<TextView android:text="Last Name" android:id="@+id/lName" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 			<EditText android:text="" android:id="@+id/editLName" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
 		</TableLayout>
 	</TableRow>
 	<Button android:layout_height="wrap_content" android:text="Submit" android:layout_width="wrap_content" android:id="@+id/submit"></Button>
</TableLayout>
